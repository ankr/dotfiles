[alias]
  st = status -sb
  co = checkout
  nb = checkout -b
  ap = add -p
  df = diff
  dt = difftool
  ds = diff --staged
  ci = commit
  cv = commit -v
  br = branch --sort=-committerdate
  ca = commit --amend
  cp = cherry-pick
  lp = log -p
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  sd = !git diff stash@{0} `git rev-parse --abbrev-ref HEAD`
  fp = fetch --prune --prune-tags
  review = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git log -p origin/$GIT_CURRENT_BRANCH..$GIT_CURRENT_BRANCH
  winners = shortlog --numbered --summary
  fakeignore = update-index --assume-unchanged
  no-fakeignore = update-index --no-assume-unchanged
  find = !git log --color -p -S
  undo = reset HEAD^1
  cleanup = "!git branch --merged | grep -vE 'master|main|develop' | xargs -n 1 git branch -d"
  alias = config --get-regexp ^alias
[color]
  branch  = auto
  diff = auto
  status = auto
[color "status"]
  added = green
  changed = yellow
  untracked = red
  deleted = red bold
[color "diff"]
  meta = cyan bold
  frag = magenta bold
  old = red bold
  new = green bold
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[include]
  path = ~/.dotfiles/custom/gitconfig
[status]
 showUntrackedFiles = all
[push]
  default = current
[pull]
  ff = only
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[interactive]
  singlekey = true
[rerere]
  enabled = true
