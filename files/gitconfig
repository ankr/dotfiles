[alias]
  st = status
  co = checkout
  nb = checkout -b
  ap = add -p
  df = diff
  dt = difftool
  ci = commit
  cv = commit -v
  br = branch
  ca = commit --amend
  cp = cherry-pick
  lp = log -p
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  fakeignore = update-index --assume-unchanged
  find = !git log --color -p -S
  undo = reset HEAD^1
  cleanup = "!git branch --merged | grep -vE 'master|develop' | xargs -n 1 git branch -d"
[color]
  branch  = auto
  diff = auto
  status = auto
[color "status"]
  added = green
  changed = yellow
  untracked = red
  deleted = red bold
[color "diff"]
  meta = cyan bold
  frag = magenta bold
  old = red bold
  new = green bold
[core]
  excludesfile = ~/.gitignore
[include]
  path = ~/.dotfiles/custom/gitconfig
[push]
  default = current
[diff]
  tool = vimdiff
[difftool]
  prompt = false
